<section>

  <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
    crossorigin="anonymous">
    </script>

  <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">
  <script src="//cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

  <h1 class="text-center mt-4" style="color:Gray;">Movies Details</h1>

  <div class="container p-5">
    <h1 class="text-center mt-4"><a href="/admin/add-video" class="btn btn-info">add video</a></h1>
    <form action="/" method="post" id="admin">
      <table class="table table-striped table-dark" id="userTable">
        <thead>
          <tr>
            <th>No</th>
            <th scope="col">Movie Name</th>
            <th scope="col">description</th>
            <th scope="col">image</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          {{#each products}}
          <tr>
            <td>{{@index}}</td>
            <td>{{this.Name}}</td>
            <td>{{this.Description}}</td>
            <td> <img style="width: 50px; height: 50px;" src="/movie-img/{{this._id}}.jpg" class="card-img-top "
                alt="...">
            </td>
            <td>
              <a href="/admin/edit-product/{{this._id}}" class="btn btn-success">EDIT</a>
              <a href="/admin/delete-product/{{this._id}}" class="btn btn-light"
                onclick="return confirm('Are you want to delete{{this.Name}}?')">delete</a>
            </td>
          </tr>
          {{/each}}

        </tbody>
      </table>
    </form>
  </div>



  <script>
    $(document).ready(function () {
      $("#userTable").DataTable();
    })
  </script>

</section>