
<section>

    <script src="https://code.jquery.com/jquery-3.6.0.js"
        integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous">
        </script>

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">
    <script src="//cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

    <h1 class="text-center mt-4" style="color:Gray;">User Details</h1>
    <div class="container p-5">
        <form action="/" method="post" id="admin">
            <table class="table table-striped table-dark" id="userTable">
                <thead>
                    <tr>
                        <th>No</th>
                        <th scope="col">User Name</th>
                        <th scope="col">User Email</th>
                        <th></th>

                    </tr>
                </thead>

                <tbody>
                    {{#each Details}}
                    <tr>
                        <td>{{@index}}</td>
                        <td>{{this.Name}}</td>
                        <td>{{this.Email}}</td>
                        <td>
                            <a href="/admin/edit-Details/{{this._id}}" class="btn btn-success">EDIT</a>
                            <a href="/admin/delete-Details/{{this._id}}" class="btn btn-light"
                                onclick="return confirm('Are you want to delete{{this.Name}}?')">delete</a>
                        </td>
                    </tr>
                    {{/each}}

                </tbody>
            </table>
        </form>
    </div>



    <script>
        $(document).ready(function () {
            $("#userTable").DataTable();
        })
    </script>

</section>