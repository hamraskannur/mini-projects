<div class="container ">
    <form action="/admin/edit-Details/{{userData._id}}" method="post">
        <!-- Email input -->
        <h1 class="fw-bold mb-5 text-center">Edit Details</h1>

        <div class="form-outline mb-4">
            <label class="form-label" for="form3Example1">First name</label>
            <input name="Name" type="text" id="username" class="form-control" value="{{userData.Name}}" />
        </div>
        <div class="form-outline mb-4 mt-5">
            <label class="form-label" for="form2Example1">Email address</label>
            <input type="email" id="userEmail" class="form-control" name="Email" value="{{userData.Email}}" />

        </div>

        {{#if editErr}}
        <div class="text-center">
            <small class="text-danger">{{editErr}}</small>
        </div>
        {{/if}}
        <div class="text-center">
            <button id="btn-submit" type="submit" class="btn btn-primary btn-block mb-4">Edit Details</button>
        </div>
        <!-- Register buttons -->

    </form>
</div>


<script>
    $(document).ready(function () {

        $('#btn-submit').click(function () {
            $(".error").hide();
            var hasError = false;
            var emailReg = /^([\w-\.]+@([\w-]+\.)+[\w-]{2,4})?$/;
            var emailaddressVal = $("#userEmail").val();
            var nameaddressVal = $("#username").val();
            var PasswordVal = $("#userPassword").val();
            if (emailaddressVal == '') {
                $("#userEmail").after('<span class="error text-danger">Please enter your email address.</span>');
                hasError = true;
            }
            else if (!emailReg.test(emailaddressVal)) {
                $("#userEmail").after('<span class="error text-danger" >Enter a valid email address.</span>');
                hasError = true;
            }
            if (nameaddressVal == '') {
                $("#username").after('<span class="error text-danger">Please enter your name.</span>');
                hasError = true;
            }
            if (hasError == true) { return false; }
        });
    });
</script>